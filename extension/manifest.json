{
  "manifest_version": 2,
  "name": "Question Extension",
  "version": "1.0",
  "description": "Ask an LLM questions about highlighted text",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "http://localhost:5000/*",
    "notifications",
    "tabs"
  ],
  "browser_action": {
    "default_title": "Question Extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "popup/query.html"
  ]
}